{% extends '::base.html.twig' %}

{% block title %}{{  'Sign In' | trans({}, 'AcmeBlogBundle') }}{% endblock %}
{% block head_style %}
    {{ parent() }}
    {#<style type="text/css">#}
        {#body {#}
            {#padding-top: 40px;#}
            {#padding-bottom: 40px;#}
            {#background-color: #f5f5f5;#}
        {#}#}

        {#.form-signin {#}
            {#max-width: 300px;#}
            {#padding: 19px 29px 29px;#}
            {#margin: 0 auto 20px;#}
            {#background-color: #fff;#}
            {#border: 1px solid #e5e5e5;#}
            {#-webkit-border-radius: 5px;#}
            {#-moz-border-radius: 5px;#}
            {#border-radius: 5px;#}
            {#-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);#}
            {#-moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);#}
            {#box-shadow: 0 1px 2px rgba(0,0,0,.05);#}
        {#}#}
    {#</style>#}
{% endblock %}

{% block headline %}
    {{ 'Sign In' | trans({}, 'AcmeBlogBundle') }}
{% endblock %}

{% block content %}
    <div class="span3">
        <form class="form-signin form-inline" method="post" action={{ path('_login_check')  }}>
            <p>{{ 'Not a user? Sign up' | trans({'%link%': path('signup')}, 'AcmeBlogBundle') | raw }}</p>
            <div class="control-group{% if error %} error{% endif %}">
                <div class="controls">
                    <input type="text" class="input-block-level" placeholder="{{ 'Email or username' | trans({}, 'AcmeBlogBundle') }}" name="_username" value="{{ last_username }}" required="required"/>
                    {% if error %}
                        <span class="help-inline">{{ error.message }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="control-group">
                <input type="password" class="input-block-level" placeholder="{{ 'Password' | trans({}, 'AcmeBlogBundle') }}" name="_password" required="required"/>
            </div>
            <div class="control-group">
                <label class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" checked /> {{ 'Remember me' | trans({}, 'AcmeBlogBundle') }}
                </label>
            </div>
            <button class="btn btn-large btn-primary" type="submit">{{ 'Sign In' | trans({}, 'AcmeBlogBundle') }}</button>
        </form>
    </div>
{% endblock %}
