<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="acme_blog.document.user.class">Acme\BlogBundle\Document\User</parameter>
        <parameter key="acme_blog.model.user_manager.class">Acme\BlogBundle\Model\UserManager</parameter>

        <parameter key="acme_blog.document.post.class">Acme\BlogBundle\Document\Post</parameter>
        <parameter key="acme_blog.model.post_manager.class">Acme\BlogBundle\Model\PostManager</parameter>

        <parameter key="acme_blog.security.provider_key">users</parameter>
    </parameters>

    <services>
        <service id="acme_blog.object_manager"
                 factory-service="doctrine_mongodb"
                 factory-method="getManager"
                 class="Doctrine\ODM\MongoDB\DocumentManager"/>

        <service id="acme_blog.user_repository"
                 factory-service="acme_blog.object_manager"
                 factory-method="getRepository"
                 class="Doctrine\Common\Persistence\ObjectRepository"
                 public="false">
            <argument>%acme_blog.document.user.class%</argument>
        </service>

        <service id="acme_blog.post_repository"
                 factory-service="acme_blog.object_manager"
                 factory-method="getRepository"
                 class="Acme\BlogBundle\Repository\PostRepositoryInterface"
                 public="false">
            <argument>%acme_blog.document.post.class%</argument>
        </service>

        <service id="acme_blog.user_manager" class="%acme_blog.model.user_manager.class%">
            <argument type="service" id="acme_blog.user_repository"/>
            <argument type="service" id="security.encoder_factory"/>
            <argument>%acme_blog.document.user.class%</argument>
        </service>

        <service id="acme_blog.post_manager" class="%acme_blog.model.post_manager.class%">
            <argument type="service" id="acme_blog.post_repository"/>
            <argument type="service" id="security.encoder_factory"/>
            <argument>%acme_blog.document.user.class%</argument>
        </service>
    </services>

</container>
